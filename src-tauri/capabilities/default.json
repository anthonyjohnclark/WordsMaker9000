{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "fs:allow-appdata-read-recursive",
      "allow": [
        { "path": "$APPDATA/Projects/*" }
      ]
    },
    {
      "identifier": "fs:allow-appdata-write-recursive",
      "allow": [
        { "path": "$APPDATA/Projects/*" }
      ]
    },
    {
      "identifier": "fs:allow-document-read-recursive",
      "allow": [
        { "path": "$DOCUMENT/WordsMaker3000Backups/*" }
      ]
    },
    {
      "identifier": "fs:allow-document-meta-recursive",
      "allow": [
        { "path": "$DOCUMENT/WordsMaker3000Backups/*" }
      ]
    },
    {
      "identifier": "fs:allow-document-write-recursive",
      "allow": [
        { "path": "$DOCUMENT/WordsMaker3000Backups/*" }
      ]
    },
    {
      "identifier": "core:window:allow-minimize",
      "windows": ["main"]
    },

    {
      "identifier": "core:window:allow-maximize",
      "windows": ["main"]
    },
    {
      "identifier": "core:window:allow-close",
      "windows": ["main"]
    },
    {
      "identifier": "core:window:allow-show",
      "windows": ["main"]
    }
  ]
}
